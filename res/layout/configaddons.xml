<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bmtodesk="http://schemas.android.com/apk/res/be.vbsteven.bmtodesk"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
>
<include android:id="@+id/topbar" layout="@layout/topbar" android:layout_alignParentTop="true"/>

<ScrollView
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:padding="15dp"
	android:layout_below="@+id/topbar">
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
<TextView
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:layout_marginTop="15dp"
	android:text="Bookmark to Desktop can place your saved links in the bookmarks folder of your desktop browser.\n\nFor this to work you need to install a browser extension."
	android:autoLink="all"/>
<TextView
	android:layout_marginTop="15dp"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:text="Currently only Google Chrome/Chromium and Mozilla Firefox are supported. You can find download links on \n\nhttp://bookmarktodesktop.appspot.com/addons"
	android:autoText="true"
	android:autoLink="all" />          

<Button
	android:id="@+id/but_sendaddons"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:layout_marginTop="15dp"
	android:text="Send this link by email" />

<TextView
	android:layout_marginTop="15dp"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:text="Don't forget to configure your browser extension with your credentials after installation."
	android:autoText="true"
	android:autoLink="all" />


		
	</LinearLayout>
</ScrollView>

	
</RelativeLayout>
