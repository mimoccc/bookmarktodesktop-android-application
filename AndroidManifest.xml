<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="be.vbsteven.bmtodesk"
      android:versionCode="10"
      android:versionName="0.4">
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
        <activity android:name=".MainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".RegistrationActivity" />
        <activity android:name=".Preferences" />
        <activity android:name=".ShareActivity">
            <intent-filter>
				<action android:name="android.intent.action.SEND" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="text/plain" />
			</intent-filter>
        </activity>
        <activity android:name=".AfterSuccessfulSendActivity"></activity>
        
        <activity android:name=".SendAllCurrentBookmarksActivity"></activity>

        <activity android:name=".WelcomeActivity"></activity>
        <activity android:name=".ConfigureAddonActivity"></activity>
        
        <activity android:name="com.admob.android.ads.AdMobActivity" 
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen" 
                  android:configChanges="orientation|keyboard|keyboardHidden" 
                  /> 
                  
		<meta-data android:value="a14ce584fd4d37e" android:name="ADMOB_PUBLISHER_ID" />
    </application>
    <uses-sdk android:minSdkVersion="3" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.browser.permission.READ_HISTORY_BOOKMARKS" />
	<supports-screens android:smallScreens="true"
		android:normalScreens="true"
		android:largeScreens="true" />
</manifest> 